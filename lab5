class Student:
    def __init__(self, id, grades):
        self.id = id
        self.grades = grades

    def get_average_grade(self):
        return sum(self.grades) / len(self.grades)

    def __str__(self):
        return f"Student ID: {self.id}, Average Grade: {self.get_average_grade()}"

    def __del__(self):
        print(f"Student with ID {self.id} has been deleted.")

class Group:
    def __init__(self):
        self.students = []

    def add_student(self, student):
        self.students.append(student)

    def remove_student(self, student_id):
        self.students = [s for s in self.students if s.id != student_id]

    def get_rating(self):
        sorted_students = sorted(self.students, key=lambda x: x.get_average_grade(), reverse=True)
        for student in sorted_students:
            print(student)

if __name__ == "__main__":
    student1 = Student(1, [4, 5, 5, 4])
    student2 = Student(2, [5, 5, 5, 5])
    student3 = Student(3, [3, 4, 4, 3])

    group = Group()
    group.add_student(student1)
    group.add_student(student2)
    group.add_student(student3)

    print("Group Rating:")
    group.get_rating()

    group.remove_student(2)

    print("Group Rating after removal:")
    group.get_rating()